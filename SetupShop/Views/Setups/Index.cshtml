@using Microsoft.AspNetCore.Identity
@using SetupShop.Areas.Identity.Data

@inject SignInManager<SetupShopUser> SignInManager
@inject UserManager<SetupShopUser> UserManager

@model IEnumerable<SetupShop.Models.Setup>

@{
    ViewData["Title"] = "Browse Setups";
}

<h2>Browse Setups</h2>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-6 setup">
            <img src="/media/@item.Image" class="img-fluid" alt="" />
            <div class="setup-wrapper">
                <h4>@item.Name</h4>
                <div class="setup-info">
                    <div class="setup-info-left">
                        <div class="flex">
                            <svg xmlns="http://www.w3.org/2000/svg" width="15" height="15" viewBox="0 0 15 15">
                                <path d="M13.5,13.5A3.75,3.75,0,1,0,9.75,9.75,3.749,3.749,0,0,0,13.5,13.5Zm0,1.875c-2.5,0-7.5,1.256-7.5,3.75V21H21V19.125C21,16.631,16,15.375,13.5,15.375Z" transform="translate(-6 -6)" fill="#fff" />
                            </svg>
                            <p>@item.Author</p>
                        </div>
                        <div class="flex">
                            <svg xmlns="http://www.w3.org/2000/svg" width="15" height="11.25" viewBox="0 0 15 11.25">
